<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_gravity="center_horizontal"
    android:background="#FFFFFF"
    tools:context=".DQuestConfActivity">



    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/questionnaire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">




        <!--            <ListView-->
        <!--                android:id="@+id/listview_question"-->
        <!--                android:layout_width="330dp"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:descendantFocusability="beforeDescendants">-->
        <!--            </ListView>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/d_conf_quest_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="질문1"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/d_conf_answer_item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="답변1"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/d_conf_quest_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="질문2"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/d_conf_answer_item2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="답변2"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/d_conf_quest_item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="질문3"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/d_conf_answer_item3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="답변3"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/d_conf_quest_item4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="질문4"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/d_conf_answer_item4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="답변4"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/d_quest_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/d_conf_btn_contact"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#0070C0"
                android:text="대면"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/d_conf_btn_untact"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="비대면"
                android:textColor="#0070C0"
                android:textSize="28sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
